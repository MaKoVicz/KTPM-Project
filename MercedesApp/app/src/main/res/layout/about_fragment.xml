<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/introductionTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/introductionImg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_img_loading"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/introductionTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/introductionImg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_img_loading"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/introductionTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/introductionImg3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_img_loading"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:text="@string/introductionImgCaption"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

</ScrollView>